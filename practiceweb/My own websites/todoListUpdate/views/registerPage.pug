doctype html 
html 
    head 
        link(rel="stylesheet" href="styles.css")
    body(id="loginRegisterBody" class="bodyBackgroundColor")
        h1 Register
        form(action="/register" method="POST")
            label(id="emailLabel" for="emailInput") Email
            input(type="email" name="email" class="textInput")
            label(id="passwordLabel" for="passwordInput") Password 
            input(type="password" name="password" class="textInput")
            button(type="submit" class="submitButton") Register
            a(href="/login") Login